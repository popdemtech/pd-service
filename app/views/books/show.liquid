{% layout 'layouts/default-html.liquid' %}
{% block content %}
<div>
  <div class="breadcrumbs">
    <a href="/books">Books</a> > {{ book.title }}
  </div>
  <h1>{{ book.title }}</h1>
  <p><i>{{ book.author }}</i></p>
  <p>{{ book.description }}</p>
  <hr>
  <div class="book-sections">
    {% for section in bookTree %}
      <div class="book-section-panel" style="border:1px solid #ababab;margin-bottom: 20px;padding:20px;">
        {% render 'books/book-section.liquid', section: section, depth: 1 %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  h2{
    font-size:  40px;
  }
  .depth-1 {
    font-size:  32px;
    font-weight:  bold;
    margin-bottom:  5px;
  }
  .depth-2 {
    font-size:  28px;
    margin-left: 28px;
    font-weight:  normal;
  }
</style>
{% endblock %}